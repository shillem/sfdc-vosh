{
    "arrowParens": "always",
    "plugins": [
        "./node_modules/prettier-plugin-apex"
    ],
    "overrides": [
        {
            "files": "*.{cls,trigger}",
            "options": { "parser": "apex" }
        },
        {
            "files": "*.{cmp,page,component}",
            "options": { "parser": "html" }
        },
        {
            "files": "**/lwc/**/*.html",
            "options": { "parser": "lwc" }
        }
    ],
    "printWidth": 100,
    "tabWidth": 4,
    "trailingComma": "none"
}
