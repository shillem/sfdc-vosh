<?xml version="1.0" ?>
<ruleset
  name="Vosh Apex Rules"
  xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd"
>

  <description
  >https://github.com/pmd/pmd/blob/master/pmd-apex/src/main/resources/rulesets/apex/quickstart.xml</description>

  <rule ref="rulesets/apex/quickstart.xml">
    <exclude name="ApexDoc" />
    <exclude name="ApexUnitTestClassShouldHaveRunAs" />
    <exclude name="OneDeclarationPerLine" />
  </rule>

  <rule ref="category/apex/design.xml/ExcessiveParameterList">
    <properties>
      <property name="minimum" value="10.0" />
    </properties>
  </rule>

</ruleset>
